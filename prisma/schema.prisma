// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  role      String   @default("buyer")
  password  String?  // Hashed password (optional for now)

  // Notification preferences
  emailNotifications Boolean @default(true)
  smsNotifications   Boolean @default(false)
  notificationTypes  String? // JSON string of notification type preferences

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  savedHomes      SavedHome[]
  showingRequests ShowingRequest[]
  offers          Offer[]
  transactions    Transaction[]
  documents       Document[]
}

model SavedHome {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  notes     String?
  savedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
}

model ShowingRequest {
  id                String   @id @default(cuid())
  userId            String
  listingId         String
  preferredDate     DateTime
  preferredTime     String?
  note              String?
  status            String   @default("requested")
  cancellationReason String?
  showingNotes      String?
  createdAt         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Offer {
  id                   String   @id @default(cuid())
  userId               String
  listingId            String
  status               String   @default("draft")

  offerPrice           Int
  earnestMoney         Int

  financingType        String
  downPaymentPercent   Int?
  preApproved          Boolean  @default(false)

  inspectionContingency  Boolean @default(true)
  inspectionDays         Int?
  appraisalContingency   Boolean @default(true)
  appraisalDays          Int?
  financingContingency   Boolean @default(true)
  financingDays          Int?

  targetClosingDate    DateTime?
  sellerConcessions    String?
  additionalTerms      String?

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  offerId     String   @unique
  userId      String
  listingId   String
  status      String   @default("under_contract")

  closingDate DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  offer     Offer      @relation(fields: [offerId], references: [id], onDelete: Cascade)
  tasks     Task[]
  documents Document[]
}

model Task {
  id            String   @id @default(cuid())
  transactionId String
  title         String
  description   String?
  dueDate       DateTime?
  completed     Boolean  @default(false)
  completedAt   DateTime?
  order         Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}

model Document {
  id              String   @id @default(cuid())
  userId          String
  transactionId   String?  // Optional - can be general or transaction-specific
  fileName        String
  fileUrl         String   // S3/R2/Supabase URL
  fileSize        Int      // Size in bytes
  fileType        String   // MIME type
  documentType    String   // Category: pre-approval, bank-statement, id, contract, etc.
  description     String?

  uploadedAt      DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([transactionId])
}
